
@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
}
@model SEN.WebUI.Models.LoginModel

<div class="top text-center" id="toptext">
    <b>Đăng nhập</b>
</div>
<div id="formSignin">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
        <div class="form-group">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email hoặc số di dộng", @autofocus = "autofocus" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Password,new { @class = "form-control", @placeholder = "Password", @type = "Password", @autofocus = "autofocus" })
            <div class="row">
                <div class="checkbox col-md-6">
                   <!-- <label>
                           @@Html.CheckBoxFor(model => model.RemberMe)
                           RememberMe
                       </label> -->
                </div>
                <div class="help-block text-right col-md-6"><a href="">Forget the password ?</a></div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
        </div>
    }
    Or <br>
    Login via
    <div class="social-buttons">
        <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
        <a href="#" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
    </div>
</div>
<div class="bottom text-center">
    <span id="bottomtext"> Chưa có tài khoản? </span><a href="/DangKy" class="btn-link"> <b>Đăng ký ngay</b> </a>
</div>